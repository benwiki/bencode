{
    // general
    "python.analysis.autoImportCompletions": true,

    // pylint
    "pylint.args": [
        "--enable=W0614",
        "--disable=C0114,C0115,C0116"
    ],
    
    // black
    // "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    
    // isort
    "isort.args": [
        "--profile",
        "black"
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "files.associations": {
        "*.py": "python",
        "*.arb": "json",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "exception": "cpp",
        "fstream": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "memory": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "streambuf": "cpp",
        "typeinfo": "cpp"
    },
}
